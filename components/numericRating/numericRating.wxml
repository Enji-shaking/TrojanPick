<!--components/numericRating/numericRating.wxml-->
<view class="numericRating">
  <view class="title">
    课程评价
  </view>
  <view class="line"></view>
  <picker mode="selector" value="{{index}}" range="{{list}}">
    <DropDown type="{{dropDownType}}"></DropDown>
  </picker>
  <view class="ratings">
    <SingleNumericRating class="single" value="{{difficultyRating}}" name="课程难度"></SingleNumericRating>
    <SingleNumericRating class="single" value="{{interestRating}}" name="内容趣味性"></SingleNumericRating>
    <SingleNumericRating class="single" value="{{workloadRating}}" name="workload"></SingleNumericRating>
    <SingleNumericRating class="single" value="{{teachRating}}" name="teaching"></SingleNumericRating>
  </view>

</view>
