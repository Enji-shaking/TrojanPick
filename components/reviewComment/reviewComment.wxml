<!--components/reviewComment.wxml-->
<view class="comment">
  <view class="top">
    <view class="avatar"><image src="{{avatarURL}}"></image></view>
    <view class="right">
      <view class="username">{{userName}}</view>
      <view class="date">{{date}}</view>
    </view>
  </view>
  <view class="content">{{content}}</view>
  <view class="bottom">
    <view bind:tap="upVoteTapped">
      <image src="{{voted_by_me===1?'../../icon/others/like.svg': '../../icon/others/like_grey.svg'}}"></image>
      <text>{{voteUp}}</text>
    </view>
    <view bind:tap="downVoteTapped">
      <image src="{{voted_by_me===-1?'../../icon/others/downvote.svg':'../../icon/others/downvote_grey.svg'}}"></image>
      <text>{{voteDown}}</text>
    </view>
    <view>
      <image src="../../icon/others/delete.svg"></image>
    </view>
  </view>
</view>