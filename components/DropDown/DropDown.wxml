<!--components/DropDown/DropDown.wxml-->
<view class="dropdown">
  <view class="text" wx:if="{{type==1 || type==3}}">View By Courses</view>
  <view class="box" wx:if="{{type==1 || type==3}}">
    <text style="padding: 15rpx;" class="text">{{courseName}}</text>
  </view>
  <view class="text" wx:if="{{type==2 || type==3}}">View By Professors</view>
  <view class="box" wx:if="{{type==2 || type==3}}">
    <text style="padding: 15rpx" class="text">{{professorName}}</text>
  </view>
</view>
