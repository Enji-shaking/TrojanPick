.border {
  border: 1px solid #F8C1B0;
}
.borderTop {
  border-top: 1px solid #F8C1B0;
  box-sizing: border-box;
}
.box {
  width: 554rpx;
  margin: auto;
  background-color: #FFF7DB;
  margin-top: 40rpx;
  box-sizing: border-box;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}
.box .top {
  display: flex;
  height: 82rpx;
}
.box .top .left,
.box .top .right {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #953A3A;
}
.box .top .left {
  border-right: 1px solid #F8C1B0;
}
.box .content {
  height: 144rpx;
  position: relative;
}
.box .content .text {
  color: #6A6868;
  font-size: 26rpx;
}
.box .content .delete {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
}
.box .content .invisible {
  display: none;
}
.box .content .showAll {
  display: flex;
  align-items: center;
  text-align: center;
  font-size: 22rpx;
  text-decoration-line: underline;
  color: #B55353;
}
.box .rating {
  height: 212rpx;
  display: flex;
  flex-direction: column;
}
.box .rating .singleRating {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #953A3A;
  font-size: 26rpx;
}
.box .bottom {
  display: flex;
  height: 88rpx;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.box .bottom view {
  position: relative;
}
.box .bottom view .commentInput {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  opacity: 0;
}
.box .bottom view image {
  width: 40rpx;
  height: 38rpx;
}
.box .bottom view text {
  color: #6A6868;
  font-size: 26rpx;
}
