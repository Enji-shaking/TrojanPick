        <image class="right_rating_img" mode="widthFix" src="/icon/ours/profRating.svg"> </image>
        <view class="right_rating_text">
            <view class="right_rating_text_line_1">
                教授评价
            </view>
            <view class="right_rating_text_line_2">
                View by profs
