<Header></Header>

<view class="title_wrapper">
    <view class="title_line_1">新建课程</view>
    <view class="title_line_2">New Course</view>
</view>

<view class="content_wrapper">

    <view class="row">
        <view class="text">
            课号
        </view>
        <view class="textInput">
            <input type="text" bind:input="onCourseIdInput" placeholder="e.g. ITP 115" />
        </view>
    </view>
    <view class="row">
        <view class="text">
            课程全称
        </view>
        <view class="textInput">
            <input type="text" bind:input="onCourseNameInput" placeholder="e.g. Introduction to Python" />
        </view>
    </view>


    <view class="confirmButtonWrapper">
        <ConfirmButton title="确认" bind:onConfirm="onConfirm"></ConfirmButton>
    </view>
</view>

<BottomNav></BottomNav>